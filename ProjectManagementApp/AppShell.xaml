<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="ProjectManagementApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:ProjectManagementApp.Views"
    xmlns:local="clr-namespace:ProjectManagementApp"
    Shell.FlyoutBehavior="Disabled"
    >
    <Shell.TitleView>
        <HorizontalStackLayout VerticalOptions="CenterAndExpand" HeightRequest="60">
            <Image Source="designer.png" HeightRequest="32" Aspect="AspectFit" Margin="10,2.5" VerticalOptions="CenterAndExpand"/>
            <Label Text="ProjApp" FontFamily="MontserratMedium" 
                   FontSize="24" 
                   Margin= "2.5" VerticalOptions="Center" 
                   TextColor="#D90B1C"
                   VerticalTextAlignment="Center"/>
        </HorizontalStackLayout>
    </Shell.TitleView>

    <ShellContent ContentTemplate="{DataTemplate views:HomeView}" Route="Home"/>

</Shell>
